{
    "version": 2,
    "builds": [
      { "src": "public/**/*", "use": "@vercel/static" }, 
      { "src": "api/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/save-time.js"
      },
      {
        "src": "/api/(.*)",
        "dest": "/api/get-time.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }
  